@import "Packages/com.denis535.uitoolkit-theme-style-sheet/Runtime/UIToolkit.ThemeStyleSheet/Assets.UnityEngine.UIElements/StyleSheets/Internal/_Utils"

// root-widget
#root-widget
    add-layout-position(absolute)
    add-layout-size(100%, 100%)
    add-layout-box(0px, 0px, 0px)

// main-widget
#main-widget
    add-view-background(null, img('project://database/Assets/Project/Assets.Project.01.UI/MainScreen/Images/Background.png', null, scale-and-crop))

// game-widget
#game-widget
    add-view()

// loading-widget
#loading-widget
    .background
        add-view-background(null, img('project://database/Assets/Project/Assets.Project.01.UI/MainScreen/Images/Background.png', null, scale-and-crop))
        transition-property -unity-background-image-tint-color, translate, rotate, scale
        transition-duration 10s
        transition-timing-function ease