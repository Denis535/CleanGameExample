@import "../Internal/_Theme"

// selector
selector--scroller              = // string: .unity-scroller--horizontal
selector--field                 = // string: .unity-scroller--horizontal .unity-base-slider
selector--field-input           = // string: .unity-scroller--horizontal .unity-base-slider   .unity-base-slider__input
selector--field-input-container = // string: .unity-scroller--horizontal .unity-base-slider   .unity-base-slider__input #unity-drag-container
selector--field-input-tracker   = // string: .unity-scroller--horizontal .unity-base-slider.% .unity-base-slider__input #unity-drag-container #unity-tracker
selector--field-input-dragger   = // string: .unity-scroller--horizontal .unity-base-slider.% .unity-base-slider__input #unity-drag-container #unity-dragger
selector--low-button            = // string: .unity-scroller--horizontal #unity-low-button.%
selector--high-button           = // string: .unity-scroller--horizontal #unity-high-button.%

// theme
.selector--scroller              // styles: add-theme(null              )
.selector--field                 // styles: add-theme(null              )
.selector--field-input           // styles: add-theme(null              )
.selector--field-input-container // styles: add-theme(null              )
.selector--field-input-tracker   // styles: add-theme(scrolller-tracker )
.selector--field-input-dragger   // styles: add-theme(scrolller-dragger )
.selector--low-button            // styles: add-theme(left-arrow-button )
.selector--high-button           // styles: add-theme(right-arrow-button)

// layout
.selector--scroller              // styles: add-layout(null,     auto, auto, (2px 2px 0px 2px), (0px), (0px))
.selector--field                 // styles: add-layout(null,     auto, auto, (2px 2px 0px 0px), (0px), (0px))
.selector--field-input           // styles: add-layout(null,     auto, auto, (0px            ), (0px), (0px))
.selector--field-input-container // styles: add-layout(null,     auto, auto, (0px            ), (0px), (0px))
.selector--field-input-tracker   // styles: add-layout(null,     auto, 24px, (0px            ), (1px), (0px))
.selector--field-input-dragger   // styles: add-layout(absolute, auto, 24px, (0px            ), (1px), (0px))
.selector--low-button            // styles: add-layout(null,     24px, 24px, (0px            ), (1px), (0px))
.selector--high-button           // styles: add-layout(null,     24px, 24px, (0px            ), (1px), (0px))

// flex
.selector--scroller              // styles: add-flex(0, 0, auto, auto).add-flex2(row, flex-start, null, center)
